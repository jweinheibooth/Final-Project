<div>
  <div>
    <h1>
      List of all games
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new game
    </h2>

    <form action="/insert_game" method="post">
      <div>
        <label for="winner_id_box">
          Winner
        </label>

        <input type="text" id="winner_id_box" name="query_winner_id">
      </div>

      <div>
        <label for="loser_id_box">
          Loser
        </label>

        <input type="text" id="loser_id_box" name="query_loser_id">
      </div>

      <div>
        <label for="winner_points_box">
          Winner points
        </label>

        <input type="text" id="winner_points_box" name="query_winner_points">
      </div>

      <div>
        <label for="loser_points_box">
          Loser points
        </label>

        <input type="text" id="loser_points_box" name="query_loser_points">
      </div>

      <button>
        Create game
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Winner
        </th>

        <th>
          Loser
        </th>

        <th>
          Winner points
        </th>

        <th>
          Loser points
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_games.each do |a_game| %>
      <tr>
        <td>
          <%= a_game.id %>
        </td>

        <td>
          <%= a_game.winner_id %>
        </td>

        <td>
          <%= a_game.loser_id %>
        </td>

        <td>
          <%= a_game.winner_points %>
        </td>

        <td>
          <%= a_game.loser_points %>
        </td>

        <td>
          <%= time_ago_in_words(a_game.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_game.updated_at) %> ago
        </td>

        <td>
          <a href="/games/<%= a_game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
