<div>
  <div>
    <h1>
      Game #<%= @the_game.id %> details
    </h1>

    <div>
      <div>
        <a href="/games">
          Go back
        </a>
      </div>

      <div>
      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
        <a href="/delete_game/<%= @the_game.id %>">
          Delete game
        </a>
      </div>
      <% end %>
    </div>


<hr>
<div>
  <div>
    <table class="content-table">
      <tr>
        <th>
        Winner
      </th>
      <th>
        Loser
      </th>
      <th>
        Winner points
      </th>
      <th>
        Loser points
      </th>
      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
      <th>
        Created at
      </th>
      <th>
        Updated at
      </th>
      <% end %>
      </tr>

      <tr>
      <td>
        <%= @the_game.winner_id %>
      </td>

      <td>
        <%= @the_game.loser_id %>
      </td>

      <td>
        <%= @the_game.winner_points %>
      </td>

      <td>
        <%= @the_game.loser_points %>
      </td>

      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
      <td>
        <%= time_ago_in_words(@the_game.created_at) %> ago
      </td>

      <td>
        <%= time_ago_in_words(@the_game.updated_at) %> ago
      </td>
      <% end %>
    </tr>
    </table>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit game
    </h2>

    <form action="/modify_game/<%= @the_game.id %>"  method="post" >
      <div>
        <label for="winner_id_box">
          Winner
        </label>

        <input type="text" id="winner_id_box" name="query_winner_id" value="<%= @the_game.winner_id %>">
      </div>

      <div>
        <label for="loser_id_box">
          Loser
        </label>

        <input type="text" id="loser_id_box" name="query_loser_id" value="<%= @the_game.loser_id %>">
      </div>

      <div>
        <label for="winner_points_box">
          Winner points
        </label>

        <input type="text" id="winner_points_box" name="query_winner_points" value="<%= @the_game.winner_points %>">
      </div>

      <div>
        <label for="loser_points_box">
          Loser points
        </label>

        <input type="text" id="loser_points_box" name="query_loser_points" value="<%= @the_game.loser_points %>">
      </div>

      <button>
        Update game
      </button>
    </form>
  </div>
</div>

<hr>