<div>
  <div>
    <%# <h1>
      Player stat #<%= @the_player_stat.id %>
    <%# </h1> %>

    <h1>
      <%= @the_player_stat.player.player_name %>'s Stat Line
    <h1>
    <h2>
      Game # <%= @the_player_stat.game_id %>
    </h2>

    <div>
      <div>
        <a href="/player_stats">
          Go back
        </a>
      </div>

      <div>
      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
        <a href="/delete_player_stat/<%= @the_player_stat.id %>">
          Delete player stat
        </a>
      </div>
      <% end %>
    </div>

<hr>
<div>
  <div>
    <table class="content-table">
    <tr>
      <th>Player</th>
      <th>Game</th>
      <th>Points</th>
      <th>Three pointers made</th>
      <th>Three point attempts</th>
      <th>Rebounds</th>
      <th>Assists</th>    
      <th>Turnovers</th>
      <th>Steals</th>  



      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
      <th>
        Created at
      </th>
      <th>
        Updated at
      </th>
      <% end %>
      </tr>

      <tr>
      <td>
        <%= @the_player_stat.player.player_name %>
      </td>

      <td>
        <%= @the_player_stat.game_id %>
      </td>

      <td>
        <%= @the_player_stat.points %>
      </td>

      <td>
        <%= @the_player_stat.three_pointers_made %>
      </td>

      <td>
        <%= @the_player_stat.three_point_attempts %>
      </td>

      <td>
        <%= @the_player_stat.rebounds %>
      </td>

      <td>
        <%= @the_player_stat.assists %>
      </td>

      <td>
        <%= @the_player_stat.turnovers %>
      </td>

      <td>
        <%= @the_player_stat.steals %>
      </td>

      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>        
      <td>
        <%= time_ago_in_words(@the_player_stat.created_at) %> ago
      </td>
      <td>
        <%= time_ago_in_words(@the_player_stat.updated_at) %> ago
      </td>
      <% end %>   
    </tr>
    </table>
  </div>
</div>

<hr>


<div>
  <div>
      <% session.fetch(:user_id) %>
      <% if session.fetch( :user_id) == nil  %>
      <%else%>  
    <h2>
      Edit player stat
    </h2>

    <form action="/modify_player_stat/<%= @the_player_stat.id %>"  method="post" >
      <div>
        <label for="points_box">
          Points
        </label>

        <input type="text" id="points_box" name="query_points" value="<%= @the_player_stat.points %>">
      </div>

      <div>
        <label for="three_pointers_made_box">
          Three pointers made
        </label>

        <input type="text" id="three_pointers_made_box" name="query_three_pointers_made" value="<%= @the_player_stat.three_pointers_made %>">
      </div>

      <div>
        <label for="three_point_attempts_box">
          Three point attempts
        </label>

        <input type="text" id="three_point_attempts_box" name="query_three_point_attempts" value="<%= @the_player_stat.three_point_attempts %>">
      </div>

      <div>
        <label for="rebounds_box">
          Rebounds
        </label>

        <input type="text" id="rebounds_box" name="query_rebounds" value="<%= @the_player_stat.rebounds %>">
      </div>

      <div>
        <label for="assists_box">
          Assists
        </label>

        <input type="text" id="assists_box" name="query_assists" value="<%= @the_player_stat.assists %>">
      </div>

      <div>
        <label for="turnovers_box">
          Turnovers
        </label>

        <input type="text" id="turnovers_box" name="query_turnovers" value="<%= @the_player_stat.turnovers %>">
      </div>

      <div>
        <label for="steals_box">
          Steals
        </label>

        <input type="text" id="steals_box" name="query_steals" value="<%= @the_player_stat.steals %>">
      </div>

      <div>
        <label for="game_id_box">
          Game
        </label>

        <input type="text" id="game_id_box" name="query_game_id" value="<%= @the_player_stat.game_id %>">
      </div>

      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id" value="<%= @the_player_stat.player_id %>">
      </div>

      <button>
        Update player stat
      </button>
    </form>
    <% end %>
  </div>
</div>

<hr>
